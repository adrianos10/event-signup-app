// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./app.db"
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  date        DateTime
}

model Participant {
  id        Int    @id @default(autoincrement())
  email     String @unique
  firstname String
  lastname  String
  eventId   Int
}
